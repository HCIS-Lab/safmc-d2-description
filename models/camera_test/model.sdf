<?xml version="1.0"?>
<sdf version="1.7">
    <model name="camera_test">
        <link name="camera_test/camera_visual">
            <visual name="visual">
                <geometry>
                    <box>
                        <size>0.25 0.24 0.115</size>
                    </box>
                </geometry>
            </visual>

            <collision name="collision">
                <geometry>
                    <box>
                        <size>0.25 0.24 0.115</size>
                    </box>
                </geometry>
            </collision>

            <inertial>
                <mass>1.0</mass>
                <inertia>
                    <ixx>0.1</ixx>
                    <iyy>0.1</iyy>
                    <izz>0.1</izz>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyz>0</iyz>
                </inertia>
            </inertial>
        </link>

        <link name="camera_test/camera_sensor">
            <!-- Camera sensor -->
            <sensor type="camera" name="camera_sensor">
                <pose>0 0 1 -1.5708 0 0</pose> <!-- -1.5708 -> -90deg -> to bottom -->
                <camera>
                    <horizontal_fov>1.047</horizontal_fov>
                    <image>
                        <width>1080</width> <!-- resolution -->
                        <height>720</height>
                    </image>
                    <clip>
                        <near>0.1</near>
                        <far>100</far>
                    </clip>
                </camera>
                <topic>Camera_Topic</topic>
                <always_on>1</always_on>
                <update_rate>100</update_rate> <!-- update rate-->
                <visualize>true</visualize>

                <!-- ROS 2 plugin -->
                <plugin name="camera_ros2_plugin" filename="libgazebo_ros_camera.so">
                    <camera_name>downward_camera</camera_name>
                    <namespace>/test_robot</namespace> <!-- Adjust namespace -->
                    <image_topic_name>/downward_camera/image_raw</image_topic_name>
                    <camera_info_topic_name>/downward_camera/camera_info</camera_info_topic_name>
                    <frame_name>downward_camera_link</frame_name> <!-- Set the TF frame name -->
                </plugin>
            </sensor>
        </link>
    </model>
</sdf>
